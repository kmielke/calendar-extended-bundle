{
  "name": "kmielke/calendar-extended-bundle",
  "description": "Contao 4 LTS calendar extension bundle. Better recurring events and exceptions.",
  "type": "contao-bundle",
  "version": "1.1.3",
  "keywords": [
    "contao",
    "fullcalendar",
    "calendar",
    "events",
    "exceptions",
    "registration",
    "vacations"
  ],
  "type": "contao-bundle",
  "license": "LGPL-3.0-or-later",
  "authors": [
    {
      "name": "Kester Mielke",
      "email": "kester.mielke@posteo.de"
    },
    {
      "name": "Carsten GÃ¶tzinger",
      "homepage": "https://github.com/cgoIT"
    }
  ],
  "support": {
    "issues": "https://github.com/cgoIT/calendar-extended-bundle/issues",
    "source": "https://github.com/cgoIT/calendar-extended-bundle"
  },
  "require": {
    "php": "^8.1 || ^8.2",
    "contao/core-bundle": "^4.13",
    "contao/calendar-bundle": "^4.13",
    "menatwork/contao-multicolumnwizard-bundle": "^3.6",
    "terminal42/notification_center": "^1.5",
    "terminal42/contao-leads": "^1.4"
  },
  "require-dev": {
    "bamarni/composer-bin-plugin": "^1.5",
    "contao/manager-plugin": "^2.0",
    "phpunit/phpunit": "^10.3",
    "symfony/phpunit-bridge": "^6.1",
    "franzl/studio": "^0.16.0"
  },
  "autoload": {
    "psr-4": {
      "Kmielke\\CalendarExtendedBundle\\": "src/"
    },
    "classmap": [
      "src/Resources/contao/"
    ],
    "exclude-from-classmap": [
      "src/Resources/contao/config/",
      "src/Resources/contao/dca/",
      "src/Resources/contao/languages/",
      "src/Resources/contao/templates/"
    ]
  },
  "extra": {
    "bamarni-bin": {
      "bin-links": false,
      "target-directory": "tools"
    },
    "contao-manager-plugin": "Kmielke\\CalendarExtendedBundle\\ContaoManager\\Plugin"
  },
  "config": {
    "allow-plugins": {
      "contao-components/installer": true,
      "php-http/discovery": true,
      "contao-community-alliance/composer-plugin": true,
      "bamarni/composer-bin-plugin": true,
      "contao/manager-plugin": true,
      "franzl/studio": true
    }
  },
  "scripts": {
    "all": [
      "@unit-tests",
      "@ecs",
      "@phpstan"
    ],
    "ecs": "@php tools/ecs/vendor/bin/ecs check src tests --config ecs.php --fix --ansi --clear-cache",
    "phpstan": "@php tools/phpstan/vendor/bin/phpstan analyze --ansi",
    "unit-tests": "@php vendor/bin/phpunit --colors=always"
  }
}
